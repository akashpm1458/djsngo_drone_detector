# Django EchoShield Environment Configuration
# Copy this file to .env and update values

# Django Settings
DEBUG=False
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# Database
DB_PASSWORD=your-secure-password-here
DATABASE_URL=postgresql://echoshield:your-secure-password-here@db:5432/echoshield

# Redis & Celery
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Ingest API URL (for forwarding events)
ECHOSHIELD_INGEST_URL=http://localhost:8000/api/v0/ingest/wire

# Logging
LOG_LEVEL=INFO

# Security (Production only)
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# CORS (if needed for frontend)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
